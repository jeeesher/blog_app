<div class="container my-5">
  <!-- Recent Posts Section -->

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Recent Posts</h2>
    <%= link_to "See All Posts", admin_posts_path, class: "btn btn-outline-primary rounded-pill fw-semibold px-4" %>
  </div>

  <% @recent_posts.each do |post| %>
    <div class="dashboard-item py-2">
      <!-- Info -->
      <div class="mb-1 text-muted small">
        <span class="fw-bold text-uppercase"><%= post.user.name %></span>
        <span class="mx-1">|</span>
        <span><%= time_ago_in_words(post.created_at) %> ago</span>
      </div>

      <!-- Title -->
      <h5 class="fw-bold mt-2">
        <%= link_to post.title, admin_post_path(post), class: "text-dark text-decoration-none hover-primary" %>
      </h5>
      <p class="text-muted mb-0">
          <%= truncate(post.body, length: 120) %>
      </p>
    </div>
    <hr>
  <% end %>

  <!-- Recent Comments Section -->
  <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
    <h2 class="fw-bold">Recent Comments</h2>
    <%= link_to "See All Comments", admin_comments_path, class: "btn btn-outline-primary rounded-pill fw-semibold px-4" %>
  </div>

  <% @recent_comments.each do |comment| %>
    <div class="dashboard-item py-2">
      <!-- Comment Preview -->
      <p class="mb-1">
        <%= truncate(comment.content, length: 50) %>
      </p>

      <!-- Info --> 
      <div class="mb-1 text-muted small">
        <span class="fw-bold text-uppercase"><%= comment.user.name %></span>
        <span class="mx-1">|</span>
        <span><%= time_ago_in_words(comment.created_at) %> ago</span>
        <span class="mx-1">|</span>
        <strong>"<%= comment.post.title %>"</strong>
      </div>
    <hr>
  <% end %>
</div>