<div class="post-form-container mx-auto mt-5">
    <div class="post-form-card">
        <h3 class="fw-bold mb-4">Edit Comment</h3>

        <%= form_with model: [:admin, @comment], local: true do |f| %>
            <% if @comment.errors.any? %>
                <div class="alert alert-danger">
                    <h5 class="fw-bold"><%= pluralize(@comment.errors.count, "error") %> prevented this comment from being saved:</h5>
                    <ul class="mb-0">
                    <% @comment.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="mb-3">
                <%= f.label :content, "Comment", class: "form-label fw-semibold" %><br>
                <%= f.text_area :content, rows: 4, required: true, class: "form-control rounded-2" %>
            </div>

            <p class="text-muted small">
                Editing comment by <strong><%= @comment.user.name %></strong> on 
                <em><%= @comment.post.title %></em>
            </p>

            <div class="d-flex justify-content-end gap-2">
                <%= link_to "Cancel", (request.referer || admin_comments_path), class: "btn btn-outline-primary rounded-pill px-4" %>
                <%= f.submit "Save", class: "btn btn-primary rounded-pill px-4" %>
            </div>
        <% end %>
    </div>
</div>
