<div class="auth-page-container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm auth-card">
        <h2 class="text-center mb-4">Sign Up</h2>

        <%= form_with model: @user, url: signup_path, local: true, class: "auth-form" do |f| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
            <h6><%= pluralize(@user.errors.count, "error") %> prevented signup:</h6>
            <ul class="mb-0">
                <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

        <div class="mb-3">
            <%= f.label :email, "Email Address", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="mb-3">
            <%= f.label :name, "Full Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
        </div>

        <div class="row mb-3">
            <div class="col">
                <%= f.label :password, "Password", class: "form-label" %>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <div class="col">
                <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter your password" %>
            </div>
        </div>

        <%= f.submit "Sign Up", class: "btn btn-primary w-100 rounded-pill py-2 mt-4" %>
        <% end %>
    </div>
</div>
